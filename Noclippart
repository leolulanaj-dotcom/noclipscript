-- ULTIMATE RISING PLATFORM with Player Attachment
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local Player = Players.LocalPlayer
local isNoclipFloorEnabled = false
local noclipFloorPart = nil
local floorRiseSpeed = 10 -- MUCH FASTER (was 1)
local floorOffset = 0
local playerConnection = nil

-- Create the main GUI (same as before)
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "StevensHacks"
ScreenGui.Parent = Player.PlayerGui
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
MainFrame.BackgroundTransparency = 0.1
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

local Gradient = Instance.new("UIGradient")
Gradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(50, 50, 70)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 30))
})
Gradient.Rotation = 90
Gradient.Parent = MainFrame

local TitleLabel = Instance.new("TextLabel")
TitleLabel.Size = UDim2.new(1, 0, 0, 50)
TitleLabel.Position = UDim2.new(0, 0, 0, 0)
TitleLabel.BackgroundColor3 = Color3.fromRGB(0, 100, 150)
TitleLabel.BackgroundTransparency = 0.2
TitleLabel.Text = "Steven's hacks"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 20
TitleLabel.Parent = MainFrame

local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Size = UDim2.new(1, -20, 1, -70)
ScrollingFrame.Position = UDim2.new(0, 10, 0, 60)
ScrollingFrame.BackgroundTransparency = 1
ScrollingFrame.BorderSizePixel = 0
ScrollingFrame.ScrollBarThickness = 5
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 100)
ScrollingFrame.Parent = MainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 10)
UIListLayout.Parent = ScrollingFrame

local NoclipFloorButton = Instance.new("TextButton")
NoclipFloorButton.Size = UDim2.new(1, 0, 0, 40)
NoclipFloorButton.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
NoclipFloorButton.BackgroundTransparency = 0.5
NoclipFloorButton.Text = "Noclip Floor: OFF"
NoclipFloorButton.TextColor3 = Color3.fromRGB(255, 255, 255)
NoclipFloorButton.Font = Enum.Font.Gotham
NoclipFloorButton.TextSize = 14
NoclipFloorButton.Parent = ScrollingFrame

UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y)
end)

-- FIXED: Create platform that player can stand on
local function CreateNoclipFloor()
    if noclipFloorPart then noclipFloorPart:Destroy() end
    
    noclipFloorPart = Instance.new("Part")
    noclipFloorPart.Name = "NoclipFloor"
    noclipFloorPart.Size = Vector3.new(30, 2, 30) -- Thicker platform
    noclipFloorPart.Color = Color3.fromRGB(0, 255, 0)
    noclipFloorPart.Transparency = 0.3 -- Less transparent
    noclipFloorPart.Material = Enum.Material.Neon
    noclipFloorPart.Anchored = true
    noclipFloorPart.CanCollide = true -- MUST BE TRUE FOR PLAYER TO STAND ON IT
    noclipFloorPart.Parent = workspace
    floorOffset = 0
end

-- FIXED: Force player to stay on the platform
local function AttachPlayerToPlatform()
    if not Player.Character then return end
    
    local humanoidRootPart = Player.Character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return end
    
    -- Force player to stand on the platform
    humanoidRootPart.Velocity = Vector3.new(0, 0, 0)
    humanoidRootPart.CFrame = CFrame.new(humanoidRootPart.Position.X, noclipFloorPart.Position.Y + 5, humanoidRootPart.Position.Z)
end

-- FIXED: Faster rising with player attachment
local function UpdateNoclipFloor(deltaTime)
    if not isNoclipFloorEnabled or not noclipFloorPart or not Player.Character then return end
    
    local humanoidRootPart = Player.Character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return end
    
    -- MUCH FASTER rising speed
    floorOffset = floorOffset + (floorRiseSpeed * deltaTime)
    
    -- Set platform position
    noclipFloorPart.Position = Vector3.new(
        humanoidRootPart.Position.X,
        humanoidRootPart.Position.Y - 5 + floorOffset, -- Platform below player
        humanoidRootPart.Position.Z
    )
    
    -- Force player to stay on the platform
    AttachPlayerToPlatform()
end

local function ToggleNoclipFloor()
    isNoclipFloorEnabled = not isNoclipFloorEnabled
    
    if isNoclipFloorEnabled then
        CreateNoclipFloor()
        NoclipFloorButton.Text = "Noclip Floor: ON"
        NoclipFloorButton.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        
        -- Start forcing player to stay on platform
        if playerConnection then playerConnection:Disconnect() end
        playerConnection = RunService.Heartbeat:Connect(function()
            if isNoclipFloorEnabled and noclipFloorPart then
                AttachPlayerToPlatform()
            end
        end)
    else
        if noclipFloorPart then
            noclipFloorPart:Destroy()
            noclipFloorPart = nil
        end
        if playerConnection then
            playerConnection:Disconnect()
            playerConnection = nil
        end
        NoclipFloorButton.Text = "Noclip Floor: OFF"
        NoclipFloorButton.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
    end
end

NoclipFloorButton.MouseButton1Click:Connect(ToggleNoclipFloor)

-- Faster update loop
local lastUpdate = tick()
RunService.Heartbeat:Connect(function()
    local currentTime = tick()
    local deltaTime = currentTime - lastUpdate
    lastUpdate = currentTime
    
    if isNoclipFloorEnabled then
        UpdateNoclipFloor(deltaTime)
    end
end)

-- GUI dragging code (same as before)
local dragging = false
local dragInput, dragStart, startPos

TitleLabel.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TitleLabel.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

print("ULTIMATE RISING PLATFORM LOADED!")
print("Platform rises FAST and keeps player on it!")
